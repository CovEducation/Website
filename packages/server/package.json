{
  "name": "@coved/server",
  "version": "1.0.0",
  "author": "Johan Cervantes <johanc@mit.edu>",
  "description": "Website for CovEducation: A nonprofits focusing on helping K-12 students during the Covid-19 pandemic.",
  "main": "build/index.js",
  "files": [
    "build"
  ],
  "license": "MIT",
  "repository": "https://github.com/CovEducation/Website",
  "scripts": {
    "start": "node build/index.js",
    "build": "run-s clean build:tsc",
    "build:tsc": "tsc -b",
    "lint": "prettier --write 'src/**/*.ts'",
    "clean": "rimraf build coverage tsconfig.tsbuildinfo .nyc_output",
    "serve": "forever -c 'nodemon --exitcrash --config nodemon.json' src/index.ts",
    "dev": "nodemon --config nodemon.json src/index.ts",
    "test": "echo 'Testing...' && cross-env NODE_ENV=test nyc --reporter=lcov mocha -r ts-node/register 'tests/**/*.ts' --colors --exit && codecov"
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier --write --single-quote",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@storybook/addon-notes": "^5.3.21",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/chai-subset": "^1.3.3",
    "@types/compression": "^1.7.0",
    "@types/jest": "^26.0.20",
    "@types/mocha": "^8.2.0",
    "@types/mockery": "^1.4.29",
    "@types/mongoose": "^5.10.3",
    "@types/morgan": "^1.9.2",
    "@types/nodemailer": "^6.4.0",
    "@types/supertest": "^2.0.10",
    "@types/twilio": "^3.19.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "codecov": "^3.8.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "firebase-mock": "^2.3.2",
    "mocha": "^8.2.1",
    "mockery": "^2.1.0",
    "nodemailer-mock": "^1.5.3",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.1",
    "supertest-session": "^4.1.0",
    "ts-node": "^9.1.1",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "@typegoose/typegoose": "^7.4.8",
    "@types/express-session": "^1.17.3",
    "@types/jest": "^26.0.20",
    "algoliasearch": "^4.8.6",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.3.0",
    "express-session": "^1.17.1",
    "express-validator": "^6.9.2",
    "find-up": "^4.1.0",
    "firebase-admin": "^9.5.0",
    "google-auth-library": "^7.0.2",
    "handlebars": "^4.7.6",
    "mongoose": "5.10.18",
    "mongoose-algolia": "^1.10.1",
    "mongoose-autopopulate": "^0.14.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.17",
    "nodemailer-mandrill-transport": "^1.2.0",
    "twilio": "^3.55.1"
  }
}
